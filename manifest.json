{
  "name" : "Spotify this!",
  "version" : "1.0",
  "description" : "Shows a Spotify widget on wikipedia",
  "background" : {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs", "http://ws.spotify.com/", "http://*.wikipedia.org/"
  ],  
  "page_action" :
  {
    "default_icon" : "spofity-19.png",
    "default_title" : "Listen to this on spotify",
    "default_popup": "popup.html"
  },
  "content_scripts" : [
    { "matches" : [
        "http://*.wikipedia.org/*",
        "https://*.wikipedia.org/*"
      ],
      "js" : ["cs_wikipedia.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    },
    { "matches" : [
        "http://*.last.fm/*",
        "https://*.last.fm/*"
      ],
      "js" : ["cs_lastfm.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    },
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["cs_general.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "icons" : {
    "48" : "spotifythis-48.png",
    "128" : "spotifythis-128.png"
  },
  "manifest_version": 2
}